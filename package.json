{
  "private": true,
  "name": "@blro/ui-primitives",
  "version": "0.0.0",
  "license": "MIT",
  "repository": "https://github.com/blro0319/ui-primitives",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "vue:dev": "npm run dev --workspace=packages/vue",
    "vue:build": "npm run build --workspace=packages/vue",
    "vue:publish": "npm run publish --workspace=packages/vue --access=public",
    "nuxt:dev": "npm run dev --workspace=packages/nuxt",
    "nuxt:build": "npm run build --workspace=packages/nuxt",
    "nuxt:publish": "npm run publish --workspace=packages/nuxt --access=public",
    "docs:dev": "vitepress dev docs --host --port 7250",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@floating-ui/vue": "^1.0.0",
    "markdown-it-deflist": "^2.1.0",
    "vitepress": "1.0.0-beta.1"
  }
}
