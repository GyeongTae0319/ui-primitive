{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "sandbox/**/*",
    "sandbox/**/*.vue"
  ],
  "exclude": ["src/**/__tests__/*", "src/**/*.cy.ts"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@sandbox/*": ["sandbox/*"]
    }
  }
}
