{
  "include": ["env.d.ts", "src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.cy.ts",
    "**/*.spec.ts",
    "**/__tests__/**/*"
  ],
  "compilerOptions": {
    "outDir": "dist/types",
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    }
  }
}
